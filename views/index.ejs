<!DOCTYPE html>
<html>
  <head>
    <title>ADHD Network - 管理パネル</title>
    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore-compat.js"></script>
    <!-- アプリケーションスクリプト -->
    <script>
      // Firebase設定
      const firebaseConfig = <%- JSON.stringify(firebaseConfig) %>;
      // Firebase初期化
      firebase.initializeApp(firebaseConfig);
    </script>
  </head>
  <body>
    <!-- AIカードテンプレート -->
    <template id="ai-card-template">
      <div class="ai-card">
        <!-- 必須の要素を追加 -->
        <div class="ai-header-content">
          <span class="ai-name"></span>
        </div>
        <form class="ai-edit-form">
          <input type="text" class="ai-display-name" />
          <input type="text" class="ai-base-user-id" />
          <select class="ai-model-mode">
            <option value="hybrid">ハイブリッド</option>
            <option value="gpt4">GPT-4</option>
          </select>
          <input type="checkbox" class="ai-name-recognition" />
          <textarea class="ai-system-prompt"></textarea>
          <input type="checkbox" class="ai-bot-response" />
          <input type="number" class="ai-reply-delay" />
          <input type="text" class="ai-error-message" />
          <div class="ai-nicknames-list"></div>
          <button type="button" class="add-nickname-btn">
            ニックネーム追加
          </button>
          <button type="button" class="save-ai-btn">保存</button>
          <button type="button" class="cancel-ai-btn">キャンセル</button>
        </form>
      </div>
    </template>
  </body>
</html>
